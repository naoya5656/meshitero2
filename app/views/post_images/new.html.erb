<%= form_with model: @post_image do |f| %>
<div class="form-group">
    <%= f.label :写真をアップロード　 %>
    <div>
        <%= f.file_field :image, accept: "image/*" %>
    </div>
</div>
<div class= "form-group">
    <%= f.label :お店の名前 %>
    <div>
        <%= f.text_field :shop_name, class:"form_control" %>
    </div>
</div>
<div class="form-group">
    <%= f.label :説明 %>
    <div>
        <%= f.text_area :caption, class:"form_control" %>
    </div>
</div>
<%= f.submit '投稿する' %>
<% end %>